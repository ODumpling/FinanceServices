@page
@model RegisterModel
@{
    Layout = "_ExternalLayout";
    ViewData["Title"] = "Register";
}


<div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-md">
        <h1 class="mt-6 text-center text-3xl font-extrabold text-gray-900">Register a New Account </h1>
    </div>


    <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
        <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
            <form class="space-y-6" asp-route-returnUrl="@Model.ReturnUrl" method="POST">
                <div>
                    <label asp-for="Input.FirstName" class="block text-sm font-medium text-gray-700"></label>
                    <input asp-for="Input.FirstName" class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-cyan-500 focus:border-cyan-500 sm:text-sm"/>
                    <span asp-validation-for="Input.FirstName" class="text-red-500 font-bold"></span>
                </div>

                <div>
                    <label asp-for="Input.LastName" class="block text-sm font-medium text-gray-700"></label>
                    <input asp-for="Input.LastName" class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-cyan-500 focus:border-cyan-500 sm:text-sm"/>
                    <span asp-validation-for="Input.LastName" class="text-red-500 font-bold"></span>
                </div>

                <div>
                    <label asp-for="Input.Email" class="block text-sm font-medium text-gray-700"></label>
                    <input asp-for="Input.Email" class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-cyan-500 focus:border-cyan-500 sm:text-sm"/>
                    <span asp-validation-for="Input.Email" class="text-red-500 font-bold"></span>
                </div>

                <div>
                    <label asp-for="Input.Password" class="block text-sm font-medium text-gray-700"></label>
                    <input asp-for="Input.Password" class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-cyan-500 focus:border-cyan-500 sm:text-sm"/>
                    <span asp-validation-for="Input.Password" class="text-red-500 font-bold"></span>
                </div>

                <div>
                    <label asp-for="Input.ConfirmPassword" class="block text-sm font-medium text-gray-700"></label>
                    <input asp-for="Input.ConfirmPassword" class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-cyan-500 focus:border-cyan-500 sm:text-sm"/>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-red-500 font-bold"></span>
                </div>


                <div>
                    <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-cyan-600 hover:bg-cyan-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-cyan-500">
                        Register
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}